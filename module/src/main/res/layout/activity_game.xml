<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".Game_Zone">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Кличка"
            android:id="@+id/label_name"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/inc_sound"
            android:layout_toEndOf="@+id/inc_sound" android:paddingTop="10px" android:paddingRight="10px"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Возраст"
              android:id="@+id/label_age"
              android:layout_alignBottom="@+id/label_name" android:layout_toRightOf="@+id/label_name"
              android:layout_toEndOf="@+id/label_name"/>

    <include android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             layout="@layout/sound"
             android:id="@+id/inc_sound"
             android:layout_alignParentTop="true" android:layout_alignParentStart="true"
             android:layout_marginRight="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_money"
            android:id="@+id/label_money"
            android:layout_below="@+id/label_age" android:layout_alignLeft="@+id/label_name"
            android:layout_alignStart="@+id/label_name"/>
    <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PetView" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_shop" android:background="@null"
            android:src="@drawable/cat_cart"
            android:onClick="shopActivity"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_hangry"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:paddingRight="10dp"/>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:progressDrawable="@drawable/statusbar"
                 android:id="@+id/status_hangry"
                 android:max="100" android:progress="0" android:indeterminate="false"
                 android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/textView"
                 android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/label_play"
              android:id="@+id/textView14"
              android:paddingRight="10dp" android:layout_above="@+id/textView" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:progressDrawable="@drawable/statusbar"
                 android:id="@+id/status_play" android:max="100" android:progress="42" android:indeterminate="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true"
                 android:layout_toEndOf="@+id/textView14" android:layout_alignBottom="@+id/textView14"
                 android:layout_toRightOf="@+id/textView14"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/label_sleep"
              android:id="@+id/textView15" android:paddingRight="10dp"
              android:layout_above="@+id/textView14" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:progressDrawable="@drawable/statusbar"
                 android:id="@+id/status_sleep" android:max="100" android:progress="42" android:indeterminate="false"
                 android:layout_alignBottom="@+id/textView15" android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true" android:layout_toRightOf="@+id/textView15"
                 android:layout_toEndOf="@+id/textView15"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$$$"
            android:id="@+id/catbucks"
            android:layout_below="@+id/label_age" android:layout_toRightOf="@+id/label_money"
            android:layout_alignParentRight="false" android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false" android:layout_alignParentTop="false"
            android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TV_sleep"
            android:id="@+id/TV_sleep"
            android:layout_alignTop="@+id/status_sleep" android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="TV_play"
              android:id="@+id/TV_play"
              android:textColor="#ffffff"
              android:layout_alignTop="@+id/status_play" android:layout_alignLeft="@+id/TV_sleep"
              android:layout_alignStart="@+id/TV_sleep"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="TV_hangry"
              android:id="@+id/TV_hangry"
              android:textColor="#ffffff" android:layout_alignTop="@+id/status_hangry"
              android:layout_centerHorizontal="true"/>
</RelativeLayout>
