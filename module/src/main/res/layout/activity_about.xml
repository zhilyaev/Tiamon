<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/about"
                android:id="@+id/textView16"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:paddingTop="20dp"/>
        <include android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 layout="@layout/sound" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" android:id="@+id/include3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/about_text"
                android:id="@+id/textView17"
                android:gravity="center"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_above="@+id/textView17"
                android:src="@drawable/ic_launcher_web"
                android:layout_alignRight="@+id/textView17"
                android:layout_alignEnd="@+id/textView17"
                android:layout_toEndOf="@+id/include3" android:layout_toRightOf="@+id/include3"
                android:layout_below="@+id/include3" android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>