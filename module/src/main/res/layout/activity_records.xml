<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".Records">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/title_activity_records"
                  android:id="@+id/textView3"
                  android:layout_gravity="center_horizontal"
                  android:layout_alignBottom="@+id/include2" android:layout_centerHorizontal="true"/>
        <include android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 layout="@layout/sound" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                 android:id="@+id/include2"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" android:choiceMode="none" android:padding="20dp"/>
    </RelativeLayout>
</LinearLayout>