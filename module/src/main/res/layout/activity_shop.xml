<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ru.diamon.tiamon.Shop">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_activity_shop"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" android:layout_below="@+id/textView4" android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout4">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" android:src="@drawable/money_icon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$$$$"
                android:id="@+id/cash" android:paddingTop="6dp" android:paddingLeft="7dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true" android:id="@+id/linearLayout3"
                      android:layout_gravity="center">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                          android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/btn_mysterybox" android:src="@drawable/cat_box"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/btn_yarn" android:src="@drawable/cat_yarn"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/btn_fridge" android:src="@drawable/cat_fridge"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView5" android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 100"
                          android:id="@+id/textView6" android:layout_alignParentTop="true"
                          android:layout_toRightOf="@+id/textView5" android:layout_toEndOf="@+id/textView5"
                          android:layout_marginLeft="53dp" android:layout_marginStart="53dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 400"
                          android:id="@+id/textView7" android:layout_alignParentTop="true"
                          android:layout_toLeftOf="@+id/textView5" android:layout_toStartOf="@+id/textView5"
                          android:layout_marginRight="48dp" android:layout_marginEnd="48dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true" android:id="@+id/linearLayout5"
                      android:layout_gravity="center">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                          android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton" android:src="@drawable/cat_box"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton2" android:src="@drawable/cat_yarn"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton3" android:src="@drawable/cat_fridge"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView8" android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView9" android:layout_alignParentTop="true"
                          android:layout_toRightOf="@+id/textView8" android:layout_toEndOf="@+id/textView8"
                          android:layout_marginLeft="53dp" android:layout_marginStart="53dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView10" android:layout_alignParentTop="true"
                          android:layout_toLeftOf="@+id/textView8" android:layout_toStartOf="@+id/textView8"
                          android:layout_marginRight="48dp" android:layout_marginEnd="48dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true" android:id="@+id/linearLayout6"
                      android:layout_gravity="center">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                          android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton4" android:src="@drawable/cat_box"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton5" android:src="@drawable/cat_yarn"/>
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton6" android:src="@drawable/cat_fridge"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView11" android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView12" android:layout_alignParentTop="true"
                          android:layout_toRightOf="@+id/textView11" android:layout_toEndOf="@+id/textView11"
                          android:layout_marginLeft="53dp" android:layout_marginStart="53dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall" android:text="$ 200"
                          android:id="@+id/textView15" android:layout_alignParentTop="true"
                          android:layout_toLeftOf="@+id/textView11" android:layout_toStartOf="@+id/textView11"
                          android:layout_marginRight="48dp" android:layout_marginEnd="48dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
